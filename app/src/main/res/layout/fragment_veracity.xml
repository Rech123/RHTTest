<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:text="USD"
        android:gravity="center"
        android:clickable="false"
        android:id="@+id/SpineerFirstCuuncy"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/SpineerSecondCuuncy"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toEndOf="@+id/SpineerFirstCuuncy"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/SpineerFirstCuuncy"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_firstCure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"

        app:layout_constraintBottom_toBottomOf="@+id/SpineerFirstCuuncy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/SpineerFirstCuuncy"
        app:layout_constraintTop_toTopOf="@+id/SpineerFirstCuuncy" />

    <TextView
        android:id="@+id/et_secondCure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="result"
        app:layout_constraintBottom_toBottomOf="@+id/SpineerSecondCuuncy"
        app:layout_constraintEnd_toEndOf="@+id/et_firstCure"
        app:layout_constraintStart_toStartOf="@+id/et_firstCure"
        app:layout_constraintTop_toTopOf="@+id/SpineerSecondCuuncy" />


</androidx.constraintlayout.widget.ConstraintLayout>